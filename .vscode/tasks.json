{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "OpenGL gcc build project",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                // Output file name
                "-o", "${workspaceFolder}/build/main.out",
                // Files to compile
                "-g", "${workspaceFolder}/src/*.c",
                // Include path
                "-I${workspaceFolder}/include",
                // Libraries
                "-lGL", "-lGLU", "-lglut"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [

            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}
